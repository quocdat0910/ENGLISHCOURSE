@model IEnumerable<demo.Models.Product>

@{
    ViewBag.Title = "Sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<h2 style="margin-top:20px;text-align:center;">THÔNG TIN KHÓA HỌC</h2>
<div class="card-text">
    <a class="btn btn-success" href="/Admin/SanPham/Create">Thêm mới</a>
</div>
<div class="table-responsive">
    <table class="table v-middle">
        <thead>
            <tr class="bg-light">
                <th class="border-top-0">STT</th>
                <th class="border-top-0">Ảnh</th>
                <th class="border-top-0">Tên khóa học</th>
                <th class="border-top-0">Giá</th>
                <th class="border-top-0">Kiểu khóa học</th>
                <th class="border-top-0">Giảng dạy</th>
                <th class="border-top-0">Thời gian (tháng)</th>
                <th class="border-top-0">Học viên</th>
            </tr>
        </thead>
        <tbody>
                @if (Model!=null&&Model.Any())
                {
                    var i = 1;
                    foreach (var item in Model)

                    {
                    <tr>
                        <td>@i</td>
                        <td><img src="@item.ImagePro" width="50" /></td>
                        <td>@Html.DisplayFor(model => item.NamePro)</td>
                        <td>@demo.Common.Common.FormatNumber(item.Price, 0)</td>
                        <td>@Html.DisplayFor(model => item.Category1.NameCate)</td>
                        <td>@Html.DisplayFor(model => item.Teacher)</td>
                        <td>@Html.DisplayFor(model => item.Time)</td>
                        <td>@Html.DisplayFor(model => item.Amount)</td>
                        <td>
                            @Html.ActionLink("Sửa", "Edit", new { id = item.ProductID }, new { @class = "btn btn-success" }) 
                            @Html.ActionLink("Xóa", "Delete", new { id = item.ProductID }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                        i++;
                    }
                }
        </tbody>
    </table>
</div>





