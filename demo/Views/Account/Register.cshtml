@model demo.Models.RegisterM

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Account/_Layout.cshtml";
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
}
@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
    <div class="container mt-3">
        <div class="row g-3 align-items-center">
            <div class="col-sm-4">
                <div class="row" style="border: 2px solid #E5F7F7; padding: 10px; border-radius: 20px; top: 80px; left: 100px; margin: auto; position: relative">
                    <h4 class="text-center">Đăng ký vào hệ thống!</h4>
                    <p class="text-center">Xin mời bạn nhập đầy đủ thông tin đăng ký.</p>
                    <div class="form-group col-lg-12">
                        @Html.LabelFor(model => model.EmailCus)
                        <div style="padding:5px 0px 10px 0px">
                            @Html.TextBoxFor(model => model.EmailCus, new { @placeholder = "Email", @class = "form-control", @Type = "Email" })
                            @Html.ValidationMessageFor(model => model.EmailCus, "", new { @class = "text-danger" })
                            <p style="color:red;">@ViewBag.Alert</p>
                        </div>
                    </div>
                    <div class="form-group col-lg-12">
                        @Html.LabelFor(model => model.NameCus)
                        <div style="padding:5px 0px 10px 0px">
                            @Html.TextBoxFor(model => model.NameCus, new { @placeholder = "Tài khoản", @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.NameCus, "", new { @class = "text-danger" })
                            <p style="color:red;"> @ViewBag.CanhBao</p>
                           
                        </div>
                    </div>
                    <div class="form-group col-lg-12">
                        @Html.LabelFor(model => model.PassCus)
                        <div style="padding:5px 0px 10px 0px">
                            @Html.PasswordFor(model => model.PassCus, new { @placeholder = "Mật khẩu", @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.PassCus, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group col-lg-12">
                        @Html.LabelFor(model => model.ConfirmPassCus)
                        <div style="padding:5px 0px 10px 0px">
                            @Html.PasswordFor(model => model.ConfirmPassCus, new { @placeholder = "Xác nhận mật khẩu", @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.ConfirmPassCus, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary btn-uppercase btn-success">Đăng ký</button>
                    <p class="p-xs mt-2 text-center">
                        Bạn đã có tài khoản? <a href="~/Account/Login"><u>Đăng nhập</u></a>.
                    </p>
                </div>
            </div>
        </div>
    </div>
}

