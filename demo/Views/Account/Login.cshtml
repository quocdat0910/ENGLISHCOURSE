@model demo.Models.LoginM

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Account/_Layout.cshtml";
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
}

@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="container mt-3">
        <div class="row g-3 align-items-center">
            <div class="col-sm-4">
                <div class="row" style="border: 2px solid #E5F7F7; padding: 10px; border-radius: 20px; top: 150px; left: 100px; margin: auto; position: relative">
                    <h4 class="text-center">Đăng nhập vào hệ thống!</h4>
                    <p class="text-center">Xin mời bạn nhập đầy đủ thông tin đăng nhập.</p>
                    <div class="form-group col-lg-12">
                        <label for="name" class="form-label">Tài khoản</label>
                        <div style="padding:0px 0px 10px 0px">
                            <input type="text" class="form-control" id="name" name="NameCus" placeholder="Tài khoản"
                                   required>
                        </div>
                    </div>
                    <div class="form-group col-lg-12">
                        <label for="name" class="form-label">Mật khẩu</label>
                        <div style="padding:0px 0px 10px 0px">
                            <input type="password" class="form-control" id="pwd" name="PassCus" placeholder="Mật khẩu"
                                   required>
                        </div>
                    </div>
                    <div class="form-group col-lg-12 text-center" style="color:red; padding: 0px 0px 10px 0px ">@ViewBag.ThongBao</div>
                    <button type="submit" class="btn btn-primary btn-uppercase btn-success">Đăng nhập</button>
                    <p class="p-xs mt-2 text-center">
                        Bạn chưa có tài khoản? <a href="~/Account/Register"><u>Đăng ký</u></a>.
                    </p>
                </div>
            </div>
        </div>
    </div>
}
